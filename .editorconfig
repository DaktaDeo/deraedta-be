# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Matches the exact files Pint configures
[*.php]
indent_style = space
indent_size = 4

# JavaScript, Vue, and other file formats (handled by Prettier)
[*.{js,vue,css,scss,json,md}]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2
